@model ProjetoMVC.Models.Contato

@{

    ViewData["Title"] = "Editar Contato";

}

<h1>Editar Contato</h1>

<hr/>

<div class="row">

    <div class="col-md-4">

        <form asp-action="EditarContato">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control"/>
            </div>
           
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input"/>
            </div>
            <br/>
            <br/>
            <div class="form-group">

                <input type="submit" value="Editar Contato" class="btn btn-success"/>&nbsp;
                <a asp-action="Index" class="btn btn-danger">Voltar</a>

            </div>
        </form>
    </div>
</div>
<hr/>
