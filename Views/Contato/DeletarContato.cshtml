@model ProjetoMVC.Models.Contato

@{

    ViewData["Title"] = "Deletar Contato";

}

<h1 class="TelaDeDelecao">Deseja realmente deletar esse contato?</h1>
<h3>Essa operação é irreversível.</h3>

<hr/>

<div class="row">

    <div class="col-md-4">

        <form asp-action="DeletarContato">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control"/>
            </div>
           
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input"/>
            </div>
            <br/>
            <br/>
            <div class="form-group">

                <input type="submit" value="Deletar Contato" class="btn btn-danger"/>&nbsp;
                <a asp-action="Index" class="btn btn-light">Voltar</a>

            </div>
        </form>
    </div>
</div>
<hr/>
